<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.java.hibernate.domain">
	<class name="UserInfo" table="userinfo" >
		<id name="id" type="java.lang.Integer">
			<column name="id"/>
			<generator class="identity"/>			
		</id>
		<property name="name" type="java.lang.String" length="255" column="name"/>
		<property name="password" type="java.lang.String" length="255" column="password"/>	
		<property name="birthday" type="java.lang.String" length="255" column="birthday"/>
	</class>
</hibernate-mapping>
